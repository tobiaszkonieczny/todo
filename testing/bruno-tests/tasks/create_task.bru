meta {
  name: create_task
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/tasks/new
  body: json
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

body:json {
  {
    "title": "Complete API testing",
    "description": "Set up Bruno tests for all endpoints",
    "category_id": {{categoryId}},
    "priority": "high",
    "status": "pending"
  }
}

script:post-response {
  if (res.getStatus() === 201) {
    const responseBody = res.getBody();
    bru.setEnvVar("taskId", responseBody.id);
  }
}

tests {
  test("should create task successfully", function() {
    expect(res.getStatus()).to.equal(201);
    expect(res.getBody()).to.have.property('id');
    expect(res.getBody()).to.have.property('title', 'Complete API testing');
  });
}
